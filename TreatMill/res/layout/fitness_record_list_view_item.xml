<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

  <LinearLayout 
    android:layout_width="98px"
    android:layout_height="35px"  
    android:orientation="vertical"
    android:gravity="right">
    <TextView  
        android:id="@+id/treat_mode"  
        android:layout_width="wrap_content"
        android:layout_height="15px"
        android:textColor="#ff5b5b5b"
        android:textSize="13px"
        android:paddingRight="3px"
        android:gravity="center"/>
    <TextView  
        android:id="@+id/treat_date"  
        android:layout_width="wrap_content"
        android:layout_height="15px"
        android:paddingRight="3px"
        android:textColor="#ff5b5b5b"
        android:textSize="13px"
        android:gravity="center"/>
   </LinearLayout>
  
    <View  
        android:layout_width="1px"
        android:layout_height="fill_parent"  
        android:background="#B8B8B8"  
        android:visibility="visible" />  
  
    <TextView  
        android:id="@+id/treat_distance"  
        android:layout_width="84px"  
        android:layout_height="wrap_content"  
        android:textColor="#ff5b5b5b"
        android:gravity="center"
        android:textSize="13px" />
  
    <View  
        android:layout_width="1px"
        android:layout_height="fill_parent"  
        android:background="#B8B8B8"  
        android:visibility="visible" />  
  
    <TextView  
        android:id="@+id/treat_calorie"  
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:textColor="#ff5b5b5b"
        android:gravity="center"
        android:textSize="13px" />
  
    <View  
        android:layout_width="1px"
        android:layout_height="fill_parent"  
        android:background="#B8B8B8"  
        android:visibility="visible" />  
  
    <TextView  
        android:id="@+id/treat_time"  
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ff5b5b5b"
        android:textSize="13px" />


</LinearLayout>  