<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="446px"
    android:orientation="vertical" 
    android:background="@drawable/mode_select_bg">
    <com.weihan.treatmill.MovableTabView
         android:id="@+id/bg_choice"
	    android:layout_marginTop = "-390px"
	    android:layout_marginLeft="-10px"
	    android:layout_width="800px"
	    android:layout_height="1024px"
	    android:background= "@drawable/bgchoice"/>
    
    <FrameLayout 
    android:layout_width="800px"
    android:layout_height="50px"
    android:orientation="horizontal" 
    android:background="@drawable/title_bar">
    
    <Button 
        android:id="@+id/user_button"
        android:layout_marginLeft = "5px"
	    android:layout_width="160px"
	    android:layout_height="35px"
	    android:background= "@drawable/current_user_in_title"
	    android:layout_marginTop="3px"/> 
	    
  	<TextView
  	    android:id="@+id/user_name_in_title"
  	    android:layout_marginTop="5px"
  		android:layout_marginLeft = "45px"
  		android:layout_width="110px"
  		android:layout_height="wrap_content"
  		android:textColor="#333333"
		android:textSize="20px"
		android:gravity="center"
		android:text = "@string/user"
  		    />
     
     <ImageView
       	android:layout_marginLeft = "330px"
	    android:layout_width="150px"
	    android:layout_height="20px"
	    android:layout_marginTop="10px"
	    android:background= "@drawable/title_sf"/>
     
	<Button
	    android:id="@+id/help"
	    android:layout_marginLeft = "660px"
	    android:layout_width="130px"
	    android:layout_height="35px"
	    android:background="@drawable/help"
	    android:layout_marginTop="2px"/>
    </FrameLayout>
       
    <LinearLayout
        android:id = "@+id/backgourd_for_click"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
		<Button
		    android:id="@+id/my_fitness"
		    android:layout_marginTop = "50px"
		    android:layout_marginLeft = "0px"
		    android:layout_width="140px"
		    android:layout_height="100px"
		    android:background= "@drawable/my_fitness_not_selected"/>
		<Button
		    android:id="@+id/relaxation"
		    android:layout_marginTop = "-5px"
		    android:layout_marginLeft = "0px"
		    android:layout_width="140px"
		    android:layout_height="100px"
		    android:background="@drawable/relax_mode_not_selected"/>
		<Button
		    android:id="@+id/arcade_mode"
		   	android:layout_marginTop = "-5px"
		    android:layout_marginLeft = "0px"
		    android:layout_width="140px"
		    android:layout_height="100px"
		    android:background="@drawable/arcade_mode_not_selected"/>
		<Button
		    android:id="@+id/expert_mode"
		   	android:layout_marginTop = "-5px"
		    android:layout_marginLeft = "0px"
		    android:layout_width="140px"
		    android:layout_height="100px"
		    android:background="@drawable/expert_mode_not_selected"/>
	</LinearLayout>
	

  	 
  	 <com.weihan.treatmill.MyFrameLayout
        android:id="@+id/arcade_mode_btn_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50px"
        android:layout_marginLeft="135px"
        android:visibility="visible"
		>
        <Button
		    android:id="@+id/local_moive_mode"
		   	android:layout_marginTop = "20px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/arcade_mode_local_movie_btn"
		    />   
	</com.weihan.treatmill.MyFrameLayout>
	
	<FrameLayout      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50px"
        android:layout_marginLeft="135px"
		>
  	 
      <com.weihan.treatmill.MyFrameLayout
        android:id="@+id/relax_mode_btn_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:visibility="gone"
		>
    	<Button
		    android:id="@+id/grassland_mode"
		   	android:layout_marginTop = "20px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/relaxation_grasslands_btn"/>    	
    	<Button
		    android:id="@+id/mountain_mode"
		   	android:layout_marginTop = "20px"
		    android:layout_marginLeft = "350px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/relaxation_mountain_btn"/>
    	<Button
		    android:id="@+id/plain_mode"
		   	android:layout_marginTop = "180px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/relaxation_park_btn"/>
    	<Button
		    android:id="@+id/sea_mode"
		   	android:layout_marginTop = "180px"
		    android:layout_marginLeft = "350px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/relaxation_sea_btn"/>
    	<Button
		    android:id="@+id/city_mode"
		   	android:layout_marginTop = "340px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/relaxation_street_btn"/>
    	
    	</com.weihan.treatmill.MyFrameLayout>
    	</FrameLayout>
      <com.weihan.treatmill.MyFrameLayout
        android:id="@+id/expert_mode_btn_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50px"
        android:layout_marginLeft="135px"
        android:visibility="gone"
		>
    	<Button
		    android:id="@+id/calorie_mode"
		   	android:layout_marginTop = "20px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/expert_calorie_mode_btn"/>    	
    	<Button
		    android:id="@+id/time_mode"
		   	android:layout_marginTop = "20px"
		    android:layout_marginLeft = "350px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/expert_time_mode_btn"/>
    	<Button
		    android:id="@+id/heart_rate_mode"
		   	android:layout_marginTop = "200px"
		    android:layout_marginLeft = "50px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/expert_heart_beat_btn"/>
    	<Button
		    android:id="@+id/distance_mode"
		   	android:layout_marginTop = "200px"
		    android:layout_marginLeft = "350px"
		    android:layout_width="250px"
		    android:layout_height="155px"
		    android:background="@drawable/expert_distance_mode_btn"/>
    	</com.weihan.treatmill.MyFrameLayout>

    
       <com.weihan.treatmill.MyFrameLayout
           android:id="@+id/my_fitness_movable"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
    	    android:layout_marginTop="40px"
			android:layout_marginLeft="140px"
			android:visibility="visible">

		    <FrameLayout
		        android:id="@+id/statictis_bg"
		        android:layout_width="660px"
		        android:layout_height="220px"
		        android:layout_marginLeft="0px"
		        android:layout_marginTop="0px"
		        android:background="@drawable/mode_statistic_bg" >

		          <Button
		             android:id="@+id/select_statistic_mode_btn"
		             android:layout_width="100px"
		        	 android:layout_height="35px"
		        	 android:layout_marginTop="5px"
		       		 android:layout_marginLeft="5px"
		       		 android:background="@drawable/distance_for_static_not_selected"/>
			
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:layout_marginLeft="70px">

					<ImageView
					    android:id="@+id/mode_statistic_map_scale_img"
					    android:layout_width="60px"
					    android:layout_height="135px"
					    android:layout_marginLeft="0px"
					    android:layout_marginTop="0px" />

		          	<com.weihan.treatmill.MovableImgFortitnessStatistic
		              android:id="@+id/mode_statistic_map_img"
		              android:layout_width="580px"
		        	  android:layout_height="135px"
		        	  android:layout_marginTop="0px"
		       		  android:layout_marginLeft="0px"
		              />

					<TextView
						android:id="@+id/display_fitnees_data"
						android:layout_width="100px"
						android:layout_height="50px"
						android:background="@drawable/statistic_popup_text"
						android:textSize="15px"
						android:gravity="center"
						android:textColor="#333333"
						android:visibility="gone"
						/>
					<ImageView
						android:id="@+id/select_fitnees_data_hint"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"/>
		   		 </FrameLayout>
			<FrameLayout
				android:id="@+id/statistic_mode_button_list_fl"
		        android:layout_width="110px"
		        android:layout_height="120px"
		        android:layout_marginTop="35px"
		        android:layout_marginLeft="5px"
				android:background="@drawable/my_fitness_btn_list_bg"
				android:visibility="gone"
				>
                <ListView
                        android:id="@+id/statistic_button_list"
                        android:layout_marginTop="20px"
                        android:layout_marginLeft="5px"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:divider="#888888"
                        android:dividerHeight="0px"
                        android:scrollbars="none"
						android:background="#00000000"/>
				</FrameLayout>
            </FrameLayout>
		    <FrameLayout
				android:id="@+id/fitness_record_info_listview_for_click"
		        android:layout_width="360px"
		        android:layout_height="200px"
		        android:layout_marginTop="210px"
		        android:layout_marginLeft="0px"
		        android:background="@drawable/statistic_in_time_bg">
		          <Button
		              android:id="@+id/select_duration_btn"
		              android:layout_width="100px"
		        	 android:layout_height="33px"
		        	  android:layout_marginTop="3px"
		       		 android:layout_marginLeft="5px"
		       		 android:background="@drawable/all"/>
		
		           <ListView
		             android:id="@+id/fitness_record_info_listview"
		             android:layout_width="330px"
		        	 android:layout_height="150px"
		        	 android:layout_marginTop="55px"
                     android:divider="#c8c8c8"
                     android:dividerHeight="1px"
		       		 android:layout_marginLeft="15px"/>
					 <Button
					 android:id="@+id/delete_statistic_record"
		              android:layout_width="wrap_content"
		        	  android:layout_height="wrap_content"
		        	  android:layout_marginTop="93px"
		       		 android:layout_marginLeft="15px"
					 android:text="Delete"
					 android:visibility="gone"/>
                <FrameLayout
				android:id="@+id/duration_button_list_fl"
		        android:layout_width="110px"
		        android:layout_height="120px"
		        android:layout_marginTop="35px"
		        android:layout_marginLeft="5px"
				android:background="@drawable/my_fitness_btn_list_bg"
				android:visibility="gone"
				>
					<ListView
							android:id="@+id/duration_button_list"
							android:layout_marginTop="20px"
							android:layout_marginLeft="5px"
							android:layout_width="100px"
							android:layout_height="100px"
							android:divider="#555555"
							android:dividerHeight="0px"
							android:scrollbars="none"
							android:background="#00000000"/>
                </FrameLayout>
		    </FrameLayout>
		    
		    <FrameLayout
				android:id="@+id/goal_for_click"
		        android:layout_width="165px"
		        android:layout_height="200px"
		        android:layout_marginTop="210px"
		        android:layout_marginLeft="347px"
		        android:background="@drawable/goal_bg">
		     
		        <TextView
		              android:id="@+id/goal_message_text"
		              android:layout_width="130px"
		        	  android:layout_height="wrap_content"
		        	  android:layout_marginTop="60px"
		       		 android:layout_marginLeft="20px"
		       		 android:textSize="15px"
                     android:gravity="center"
                     android:textColor="#555555"
		       		 android:text="@string/aim_50_km"/>
		        <ImageView
		              android:id="@+id/cup_img"
		              android:layout_width="wrap_content"
		        	  android:layout_height="100px"
		        	  android:layout_marginTop="95px"
		       		 android:layout_marginLeft="20px"
		       		 android:background="@drawable/cup_b"/>
		          
		        
		    </FrameLayout>
		    
		        <FrameLayout
				android:id="@+id/advice_for_click"
		        android:layout_width="160px"
		        android:layout_height="200px"
		        android:layout_marginTop="210px"
		        android:layout_marginLeft="500px"
		        android:background="@drawable/advice_bg">
		     
		        <TextView
		              android:id="@+id/advice_text"
		              android:layout_width="120px"
		        	  android:layout_height="wrap_content"
		        	  android:layout_marginTop="60px"
		       		  android:layout_marginLeft="18px"
		       		 android:textSize="15px"
                     android:textColor="#555555"
                     android:gravity="center_horizontal"
		       		 android:text="@string/please_rember_more_excise"/>    
		        
		    </FrameLayout>
    </com.weihan.treatmill.MyFrameLayout>
    
      <FrameLayout
        android:id="@+id/user_panel_id"
        android:layout_width="230px"
        android:layout_height="320px"
        android:orientation="vertical"
        android:background="@drawable/user_panel_bg"
        android:layout_marginTop="30px"
        android:layout_marginLeft="0px"
        android:visibility="gone">
        <ImageView
            android:layout_width="120px"
            android:layout_height="15px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="60px"
            android:background="@drawable/title_user_selection"/>
        <ListView
            android:id="@+id/user_list"
            android:layout_marginTop="60px"
            android:layout_marginLeft="25px"
            android:layout_width="180px"
            android:layout_height="195px"
           	android:divider="#888888"
       		 android:dividerHeight="1px"
       		 android:scrollbars="none"/>
            
         <Button
             android:id="@+id/edit_user_panel"
             android:layout_width="80px"
            android:layout_height="25px"
            android:layout_marginTop="270px"
            android:layout_marginLeft="20px"
            android:background="@drawable/edit_user_button_style"
            />
          <Button
             android:id="@+id/done_user_panel"
             android:layout_width="80px"
            android:layout_height="25px"
            android:layout_marginTop="270px"
            android:layout_marginLeft="130px"
            android:background="@drawable/user_panel_ok_btn_not_selected"
            />
        </FrameLayout>
        
</FrameLayout>